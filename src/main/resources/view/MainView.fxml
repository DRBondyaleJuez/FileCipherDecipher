<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mainAnchorPane" prefHeight="50.0" prefWidth="50.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewController.MainViewController">
    <children>
        <BorderPane prefHeight="50.0" prefWidth="50.0">
            <center>
                <ImageView fx:id="mainImageView" fitHeight="450.0" fitWidth="450.0" pickOnBounds="true"
                           preserveRatio="true" BorderPane.alignment="CENTER"/>
            </center>
            <top>
                <MenuBar prefHeight="25.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#openAction" text="Open"/>
                                <MenuItem mnemonicParsing="false" onAction="#decipherAction" text="Decipher"/>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Settings">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                    <padding>
                        <Insets left="20.0"/>
                    </padding>
                </MenuBar>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
